{
  "name": "badgegenerator",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts",
    "start:prod": "bun run index.js",
    "build": "tsc && bun build ./src/index.ts --target=bun --outfile=index.js"
  },
  "devDependencies": {
    "bun": "^1.0.14",
    "bun-types": "latest",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "endOfLine": "auto"
  },
  "engines": {
    "node": "18.12.x"
  },
  "dependencies": {
    "pg": "^8.11.3"
  }
}
